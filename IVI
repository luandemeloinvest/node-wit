mkdir my-chatbot
cd my-chatbot
npm init -y
npm install node-fetch express body-parser
const express = require('express')
const bodyParser = require('body-parser')
const fetch = require('node-fetch')

const app = express()
app.use(bodyParser.json())

const WIT_AI_TOKEN = 'YOUR_WIT_AI_SERVER_ACCESS_TOKEN'

app.post('/webhook', async (req, res) => {
  const { text } = req.body

  const response = await fetch(`https://api.wit.ai/message?v=20210727&q=${text}`, {
    headers: {
      Authorization: `Bearer ${WIT_AI_TOKEN}`
    }
  })

  const data = await response.json()
  const witResponse = data.text || 'Desculpe, nÃ£o entendi sua pergunta.'

  res.json({ reply: witResponse })
})

const PORT = process.env.PORT || 3000
app.listen(PORT, () => {
  console.log(`Server is running on port ${PORT}`)
})
